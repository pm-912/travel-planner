<div id="single-trip">
  <h2>Trip Details</h2>
  {{#if loggedIn}}
    {{!-- {{#each trip}} --}}
      <div class="trip">
        <section class="user-details">
          <h2>User Details</h2>
          <p>Userame: {{ user.username }}</p>
          <p>Email: {{ user.email }}</p>
          <!-- Add more user details as needed -->
        </section>
        <section class="trip-details">
          <h2>Trip Details</h2>
          <p>Title: {{ trip.title }}</p>
          <p>Date: {{ trip.date }}</p>
          <!-- Add more trip details as needed -->
        </section>
        <section class="area-details">
          <h2>Area</h2>
          <p>Name: {{ area.name }}</p>
          <p>Location: {{ area.location }}</p>
          <!-- Add more area details as needed -->
        </section>
        <section class="activities">
          <h2>Activities Done</h2>
          <ul>
            {{#each activities}}
              <li>{{ this }}</li>
            {{/each}}
          </ul>
        </section>
        <!-- Comments section -->
        <section class="comments">
          <h2>Comments</h2>
          <!-- Display existing comments -->
          <ul class="existing-comments">
            {{#each comments}}
              <li>{{ this }}</li>
            {{/each}}
          </ul>
          <!-- Add new comment form -->
          <form id="add-comment-form">
            <label for="comment">Add Comment:</label><br>
            <textarea id="comment" name="comment" rows="4" cols="50"></textarea><br>
            <button type="submit">Submit</button>
          </form>
        </section>
      </div>
    {{!-- {{else}}
      <p>No single trip available.</p>
    {{/each}} --}}
  {{else}}
    <p>Please log in to view single trip.</p>
  {{/if}}
</div>