<div id="public-trips">
  <h2>Public Trips</h2>
  {{#if loggedIn}}
  {{#each trips as |trip|}}
  <div class="trip">
    <card>
      <h3>{{destination}}</h3>
      <p>{{stayLength}} days</p>
      <p>{{departureDate}}</p>
    </card>
    <!-- Add more trip details as needed -->
  </div>
  {{else}}
  <p>No public trips available.</p>
  {{/each}}
  {{else}}
  <p>Please log in to view public trips.</p>
  {{/if}}
</div>